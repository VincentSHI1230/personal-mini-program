/**index.wxss**/
.bg1 {
    position: fixed;
    height: 100vh;
    width: 100vw;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -10;
}

.tittle {
    display: block;
    font-family: 'BAIQI';
    margin: 56px 120px 0 24px;
    font-size: 24px;
    font-weight: bold;
    text-shadow: 0 1px 3px white;
}

.container {
    position: fixed;
    top: 100px;
    left: 16px;
    right: 16px;
    bottom: 24px;
    background: rgba(255, 255, 255, 0.3);
    border: 1px solid rgba(255, 255, 255, 1);
    box-shadow: 0px 2px 4px rgba(0, 0, 0, .5);
    border-radius: 24px;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    -webkit-flex-direction: column;
    align-items: center;
    -webkit-align-items: center;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    overflow-y: auto;
}

.info {
    display: flex;
    display: -webkit-flex;
    width: 100%;
    padding-top: 36px;
    flex-direction: column;
    -webkit-flex-direction: column;
    align-items: center;
    -webkit-align-items: center;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    font-family: 'BAIQI';
}

.name {
    padding: 8px;
    font-size: 32px;
}

.avatar {
    height: 200px;
    width: 200px;
    border-radius: 24px;
    border: 2px solid rgba(255, 255, 255, 1);
}

.buts {
    display: flex;
    display: -webkit-flex;
    width: 100%;
    padding: 12px 0 36px;
    align-items: center;
    -webkit-align-items: center;
    justify-content: center;
    -webkit-justify-content: center;
}

.feed {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    justify-content: center;
    -webkit-justify-content: center;
    color: white;
    background-color: rgba(255, 144, 180, 0.8);
    margin-right: 16px;
    height: 48px;
    width: 180px;
    font-size: 22px;
    font-family: 'BAIQI';
    border-radius: 8px;
    border: 1px solid white;
}

.feed-hover {
    opacity: .7;
}

.feed>image {
    display: block;
    height: 24px;
    width: 24px;
    margin: 12px 12px 12px 0;
}

.loading {
    animation: rot 1s linear infinite;
}

.about {
    display: block;
    height: 48px;
    width: 48px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 8px;
    border: 1px solid #FF90B4;
}

.about>image {
    display: block;
    height: 24px;
    width: 24px;
    margin: 12px;
}